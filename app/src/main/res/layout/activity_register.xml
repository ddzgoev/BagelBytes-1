<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002663"
    tools:context="RegisterActivity">

    <EditText
        android:id="@+id/newpswd"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/white"
        android:hint="Desired Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_below="@+id/newuname"
        android:layout_alignStart="@+id/newuname" />

    <EditText
        android:id="@+id/newuname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Desired Username"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:backgroundTint="@android:color/white"
        android:layout_marginTop="98dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/fullname"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Enter Full Name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:backgroundTint="@android:color/white"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/newuname" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#FFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/white"
        android:text="Zip Code"
        android:textColor="#FFFF"
        android:layout_below="@+id/newpswd"
        android:layout_alignStart="@+id/newpswd"
        android:layout_alignEnd="@+id/newpswd" />

    <Button
        android:id="@+id/saveRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:padding="20dp"
        android:text="Save"
        android:layout_below="@+id/zip"
        android:layout_alignStart="@+id/zip"
        android:layout_marginStart="34dp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:padding="20dp"
        android:layout_alignBaseline="@+id/saveRegister"
        android:layout_alignBottom="@+id/saveRegister"
        android:layout_alignEnd="@+id/zip"
        android:layout_marginEnd="19dp" />


</RelativeLayout>
